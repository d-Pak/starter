<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iamanidiot.app.buildmillion.ActivityBase">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/ActivityBase_ActivityDetailsLayout"
        android:layout_marginBottom="333dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Actitivy Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ActivityBase_Actitivy_Title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/TitleText_Size" />

        <TextView
            android:text="Activity Notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:id="@+id/ActivityBase_Actitivy_Notes" />

        <TextView
            android:text="@string/ActivityBase_Actitivy_CreatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="57dp"
            android:id="@+id/ActivityBase_Actitivy_CreatedDate" />

        <TextView
            android:text="Created Date should be here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ActivityBase_Actitivy_CreatedDateActual"
            android:layout_alignBaseline="@+id/ActivityBase_Actitivy_CreatedDate"
            android:layout_alignBottom="@+id/ActivityBase_Actitivy_CreatedDate"
            android:layout_alignStart="@+id/ActivityBase_Actitivy_Title" />
    </RelativeLayout>
</RelativeLayout>
