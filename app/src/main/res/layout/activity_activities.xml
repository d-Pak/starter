<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_activities"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iamanidiot.app.buildmillion.ActivitiesActivity">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="38dp"
        android:id="@+id/Activities_FAB"
        app:backgroundTint="@color/FABColor"
        android:alpha="2"
        app:elevation="25dp"/>

    <TextView
        android:text="@string/Activities_No_Activity_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Activities_No_Activity_Text"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:enabled="false"
        android:contextClickable="true"
        android:textColor="@android:color/holo_blue_dark" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/ActivityActivities_RecyclerView"
        android:layout_alignParentBottom="true"
        android:visibility="invisible" />

</RelativeLayout>
